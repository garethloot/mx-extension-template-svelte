    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "minimist": "^1.2.8",
    "mx-extension-svelte-build": "^0.0.3",
    "prettier": "^3.6.2",
